<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="p_app_lecture.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:p_app_lecture"
    Shell.FlyoutBehavior="Flyout"
    Title="p_app_lecture">

    <FlyoutItem>
        <ShellContent
             ContentTemplate="{DataTemplate local:MainPage}"
             Route="MainPage"
             Icon="logo_home.png"/>
        <ShellContent
             ContentTemplate="{DataTemplate local:Bookmark}"
             Route="Bookmark"
             Icon="logo_bookmarck.png"/>
        <ShellContent
            ContentTemplate="{DataTemplate local:Parametre}"
            Route="Parametre"
            Icon="logo_param.png"/>
        <ShellContent
            ContentTemplate="{DataTemplate local:Compte}"
            Route="Compte"
            Icon="logo_account.png"/>
    </FlyoutItem>

</Shell>
