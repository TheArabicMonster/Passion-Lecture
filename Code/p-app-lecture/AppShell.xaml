<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="p_app_lecture.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:p_app_lecture"
    Shell.FlyoutBehavior="Disabled"
    Title="p_app_lecture">
    
    <TabBar>
        <Tab Icon="logo_home.png" Title="Home">
            <ShellContent
             ContentTemplate="{DataTemplate local:MainPage}"
             Route="MainPage"
             />
        </Tab>
        <Tab Icon="logo_bookmarck.png" Title="BookMark">
            <ShellContent
             ContentTemplate="{DataTemplate local:Bookmark}"
             Route="Bookmark"
             />
        </Tab>
        <Tab Icon="logo_account.png" Title="Account">
            <ShellContent
            ContentTemplate="{DataTemplate local:Compte}"
            Route="Compte"
            />
        </Tab>
    </TabBar>

</Shell>